<!DOCTYPE html>
<html>
<head>
  <title>Projects</title>
  <!-- Include Bootstrap CSS -->
 <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
 <%= link_to 'Back', root_path , class: "btn btn-info back-btn" %>
    <%= link_to '+ New Project', new_project_path, class: "btn btn-success" %>
  <div class="container mt-5">
    <h1>Projects</h1>
    <%= search_form_for @q do |f| %>  
      <div class="mb-2">
        <%= f.label :name_cont, class: "form-label" %>
        <%= f.search_field :name_cont, class: "form-control" %>
      </div>
      <%= f.submit "Search", class: "btn btn-primary" %>
    <% end %>

    <table class="table table-bordered mt-4">
      <thead>
        <tr>
          <th>Name</th>
          <th class="text-center">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @projects.each do |project| %>
          <tr>
            <td><%= project.name %></td>
            <td>
              <%= link_to '<i class="fas fa-eye"></i>'.html_safe , project, class: 'btn btn-secondary' %>

              <%= link_to '<i class="fas fa-edit"></i>'.html_safe, edit_project_path(project), class: 'btn btn-primary' %>
              <%= link_to '<i class="fas fa-trash"></i>'.html_safe, project, method: :delete, data: {turbo_method: :delete, }, class: 'btn btn-danger' %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>


  </div>

  <!-- Include Bootstrap JS and dependencies (optional) -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
