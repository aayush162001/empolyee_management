<!DOCTYPE html>
<html>
<head>
  <title>Holidays#index</title>
  <!-- Add Bootstrap 5 CSS -->
  <% if current_user.super_admin? or current_user.company_admin?%>  
  <%= link_to '+ Add New holiday', new_holiday_path, class: 'btn btn-success' %>
<%end%>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
 <%= link_to 'Back', root_path , class: "btn btn-info back-btn" %>
  <h1>Holidays</h1> <br>
  <%# <p>Find me in app/views/holidays/index.html.erb</p> %>

  <table class="table table-bordered table-striped">
    <thead>
      <tr>
        <th class="text-center" >Name</th>
        <th class="text-center" >Date</th>
        <% if current_user.super_admin? or current_user.company_admin?%>  
        <th class="text-center" >Actions</th>
        <% end %>
      </tr>
    </thead>
    <tbody>
      <% @holidays.each do |holiday| %>
        <tr>
          <td><%= (holiday.title).titlecase %></td>
          <td><%= holiday.attendance_date %></td>
            <% if current_user.super_admin? or current_user.company_admin?%>
                      <td>
              <%= link_to '<i class="fas fa-edit"></i>'.html_safe, edit_holiday_path(holiday), class: 'btn btn-primary' %>
              <%= link_to '<i class="fas fa-trash"></i>'.html_safe, holiday, method: :delete, data: {turbo_method: :delete, }, class: 'btn btn-danger' %>
            </td>
            <%end%>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <!-- Add Bootstrap 5 JS (Optional, only required for certain Bootstrap features) -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
