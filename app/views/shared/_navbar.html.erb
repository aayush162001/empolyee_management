<!DOCTYPE html>
<html>
<head>
  <title>My App</title>
  <!-- Include Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
  <!-- Include Font Awesome CSS -->
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
  <!-- Add custom CSS for the sidebar -->
  <style>
    body {
      padding-top: 50px; /* To give space for the fixed top navbar */
    }

    .sidebar {
      position: fixed;
      top: 0;
      left: 0;
      height: 100%;
      width: 70px; /* Smaller width for the sidebar */
      background-color: #ADD8E6;
      padding-top: 1rem;
    }

    .sidebar a {
      display: block;
      padding: 0.5rem 0; /* Adjusted padding for smaller size */
      text-align: center; /* Center the icon and text vertically */
      text-decoration: none;
      color: #333;
    }

    .sidebar a i {
      font-size: 1.2rem; /* Smaller icon size */
    }

    .sidebar a:hover {
      background-color: #d1d5db;
    }
  </style>
</head>
<body>
  <!-- Sidebar -->
  <div class="sidebar">
    <div class="row">
      <div class="col-12">
        <a class="nav-link" href="/">
          <i class="fas fa-home"></i> <!-- Font Awesome home icon -->
        </a>
      </div>
      <div class="col-12">
        <a class="nav-link" aria-current="page" href="/daily_work_reports">
          <i class="fas fa-clipboard-list"></i> <!-- Font Awesome clipboard list icon -->
        </a>
        
      </div>
      <% if current_user&.super_admin? || current_user&.company_admin? || current_user&.project_manager? %>
        <div class="col-12">
          <%= link_to projects_path, class: "nav-link" do %>
            <i class="fas fa-tasks"></i> <!-- Font Awesome tasks icon -->
          <% end %>
        </div>
      <% end %>
      <% if current_user&.super_admin? || current_user&.company_admin? %>
        <div class="col-12">
          <%= link_to email_hierarchy_index_path, class: "nav-link" do %>
            <i class="fas fa-envelope"></i> <!-- Font Awesome envelope icon -->
          <% end %>
        </div>
      <% end %>
      <div class="col-12">
        <%= link_to destroy_user_session_path, method: :delete, data: { turbo_method: :delete }, class: "nav-link" do %>
          <i class="fas fa-sign-out-alt"></i> <!-- Font Awesome sign-out-alt icon -->
        <% end %>
      </div>
      
    </div>
  </div>

  <!-- Main content -->
  <div class="container">
    <h4 >Employee Management</h4>
    <%# <h4 style="background-color: #ADD8E6; padding: 10px;">Employee Management</h4> %>
    <!-- Your page content goes here -->
  </div>

  <!-- Include Bootstrap JS and dependencies -->
  
</body>
</html>
