<h1>Designation#index</h1>
 <%= link_to 'Back', root_path , class: "btn btn-info back-btn" %>
<p>Find me in app/views/designation/index.html.erb</p>
<%= link_to '+ New designation', new_designation_path, class: 'btn btn-success' %>
<br>
<br>
<table class="table table-striped">
  <thead>
    <tr>
      <th colspan="1">Name</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @designations.each do |designation| %>
      <tr>
        <td><%= designation.name.titlecase %></td>
                <td>
            <%= link_to '<i class="fas fa-eye"></i>'.html_safe , designation, class: 'btn btn-secondary' %>

            <%= link_to '<i class="fas fa-edit"></i>'.html_safe, edit_designation_path(designation), class: 'btn btn-primary' %>
            <%= link_to '<i class="fas fa-trash"></i>'.html_safe, designation, method: :delete, data: {turbo_method: :delete, }, class: 'btn btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


