<h1>Home#index</h1>
<p>Find me in app/views/home/index.html.erb</p>
    
    <p>
    <% if user_signed_in? %>
            Are you admin? <%= current_user.has_any_role? :admin,:"Company Admin" %> <br>
            <%= current_user.roles.pluck(:name) %> <br>
            Id : <%= current_user.id %> <br>
            Name : <%= current_user.name %> <br>
            <%= link_to 'edit', edit_user_path(current_user) %>
            <%= link_to 'Create New User', new_user_path %>
            <%= link_to "Signout", destroy_user_session_path, method: :delete,  data:{
            turbo_method: :delete,
            turbo_confirm: "Are you sure to want to logout"
        } %>
    <% else %>
            <%= link_to "Sign In", new_user_session_path %>
    <% end %>
    </p>

