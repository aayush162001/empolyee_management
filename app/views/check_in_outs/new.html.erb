<h1>Other Chech_In/Check_Out</h1>
<%= form_with(model: @check_in_out, url: check_in_outs_path, method: :post, local: true) do |form| %>
  <div class="card">
    <div class="card-body">
        <div class="mb-3">
            <%= form.label :date ,{ class: "form-label"} %>
            <%= form.date_field :attendance_date, { class: "form-control", autocomplete: "name"} %><br />
        </div>
        <%# <div class="mb-3">
            <%= form.hidden_field :user_id,{ class: "form-label", value: current_user.id} 
            <br />
        </div>   %>
        <%# <div class="mb-3">
            <%= form.hidden_field :check_in,{ class: "form-label", value: Time.now, autocomplete: "name"} 
            <br />
        </div> %>
        <div class="mb-3">
            <%= form.label :User_Id,{ class: "form-label"} %>
            <%= form.collection_select :user_id, User.all, :id,:email,  {class: "form-control", prompt: "Select users", multiple: true } %><br />
        </div>      
        <div class="mb-3">
            <%= form.label :check_in,{ class: "form-label"} %>
            <%= form.datetime_select :check_in, { class: "form-control"} %><br />
        </div> 
        <div class="mb-3">
            <%= form.label :check_out,{ class: "form-label"} %>
            <%= form.datetime_select :check_out, { class: "form-control"} %><br />
        </div> 
        <%= form.hidden_field :category, value: params[:category] %>
        <%= form.hidden_field :created_by,{ class: "form-label", value: current_user.id} %>
            <%= form.button :submit %>
    </div>
  </div>
<% end %>


