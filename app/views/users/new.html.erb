<h2>Sign up</h2>

<%= form_with model: @user do |f |%>
    <%# <% if @users.errors.any? %>
        <%# @users.errors.full_messages.each do |message| %>
            <p><%#= message  %></p>
        <%#end%>
    <%#end%> 
    <div class="field">
    <%= f.label :email %><br />  
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>
  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name, autocomplete: "name" %>

  </div>
  <div class="mb-3">
      <%= f.label :department_id ,{ class: "form-label"} %>
      <%=  f.collection_select :department_id, Department.all, :id, :title , { class: "form-control", prompt: "Select a project", autocomplete: "dob" } %><br />
  </div>
  <div class="mb-3">
      <%= f.label :designation_id ,{ class: "form-label"} %>
      <%=  f.collection_select :designation_id, Designation.all, :id, :name , { class: "form-control", prompt: "Select a project", autocomplete: "dob" } %><br />
  </div>
  <div class="mb-3">
            <%= f.hidden_field :created_by,{ class: "form-label", value: current_user.name} %>
            <br />
        </div>
  <div >
    <%= f.submit  %>
  </div>
<% end %>
