<h1>Department#index</h1>
 <%= link_to 'Back', root_path , class: "btn btn-info back-btn" %>
<%= link_to '+ New department', new_department_path, class: "btn btn-success" %>
<br>
<br>
<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @departments.each do |department| %>
      <tr>
        <td><%= department.title.titlecase %></td>
        <td>
            <%= link_to '<i class="fas fa-eye"></i>'.html_safe , department, class: 'btn btn-secondary' %>

            <%= link_to '<i class="fas fa-edit"></i>'.html_safe, edit_department_path(department), class: 'btn btn-primary' %>
            <%= link_to '<i class="fas fa-trash"></i>'.html_safe, department, method: :delete, data: {turbo_method: :delete, }, class: 'btn btn-danger' %>
        </td>
    <% end %>
  </tbody>
</table>

<br>


