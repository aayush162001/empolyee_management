<h1>Department#index</h1>

<%= link_to 'Add New department', new_department_path, class: "btn btn-success" %>
<br>
<br>
<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @departments.each do |department| %>
      <tr>
        <td><%= department.title.titlecase %></td>
        <td>
          <%= link_to 'Show', department, class: "btn btn-primary btn-sm" %>
        </td>
        <td>
          <%= link_to 'Edit', edit_department_path(department), class: "btn btn-secondary btn-sm" %>
        </td>
        <td>
          <%= link_to 'Destroy', department, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-sm" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


