
 <%= link_to 'Back', root_path , class: "btn btn-info back-btn" %>
<div class="container mt-5 text-center">
  <h1>Attendance Records</h1>
  <%= form_tag attendances_path, method: :get do %>
  <%= label_tag 'start_date', 'Start Date:' %>
  <%= text_field_tag 'start_date', params[:start_date] %>

  <%= label_tag 'end_date', 'End Date:' %>
  <%= text_field_tag 'end_date', params[:end_date] %>

  <%= submit_tag 'Filter', class: 'btn btn-primary' %>
  <% end %>
  <%= month_calendar(attribute: :attendance_date,events: @attendances) do |date,attendances|%>
    <div class="day">
      <%= date.day %>
    </div>
    <p><% attendances.each do |attendance|   %>
      <%=  !attendance.present? ? 'A' : 'P' %>
    <%end%>
    </p>
  <%end%>
</div> 

